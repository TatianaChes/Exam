<Page x:Class="Exam.Reporter"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exam"
      mc:Ignorable="d" 
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reporter">

    <Grid Background="#ededed">
        <Border MinWidth="100" Margin="15" Background="White" VerticalAlignment="Center" Padding="30" MaxWidth="360" CornerRadius="20" >
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="#ededed" ShadowDepth="0">
                </DropShadowEffect>
            </Border.Effect>

            <StackPanel>
                <DataGrid x:Name="dataGrid2"  Visibility="Hidden"/>
                <Button x:Name="one" Content="Результаты мед. комиссии" Margin="15" Click="one_Click"/>
                <Button x:Name="two" Content="Нарушители" Margin="15" Click="two_Click"/>
                <DataGrid x:Name="dataGrid1"  Visibility="Hidden"/>
            </StackPanel>
        </Border>

    </Grid>
</Page>
